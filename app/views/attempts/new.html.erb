<% if flash[:notice] %>
  <p class='green'><%= flash[:notice] %></p>
<% end %>

<% if flash[:error] %>
  <p class='red'><%= flash[:error] %></p>
<% end %>

<%= form_for @attempt do |a| %>
  <%= a.hidden_field :word_id %>
  <p>
    Русское слово "<%= current_user.from_for_word(@word) %>" на словацком будет...
    <%= text_field_tag 'attempt[version]' %>
  </p>
  <%= submit_tag 'Точно' %>
<% end %>

<script>
  document.getElementById('attempt_version').focus();
</script>
